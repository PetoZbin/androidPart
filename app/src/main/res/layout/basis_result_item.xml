<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:background="@drawable/round_corners_drawable"
    android:backgroundTint="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:id="@+id/finish_item_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/finish_item_top_left"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="3dp"
            android:layout_weight="0.7"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/thistle"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >


                <TextView
                    android:id="@+id/basic_record_comp_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Some competition name llllllongname"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/basic_record_left_hor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/basic_record_item_comp_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25.04.2022 14:44"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/basic_record_left_hor" />



                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/basic_record_left_vert"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.2" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/basic_record_left_hor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.61" />


            </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/finish_item_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.25"
        android:background="@drawable/round_corners"
        android:layout_margin="3dp"
        >

        <LinearLayout
            android:id="@+id/finish_tem_top_right"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/ligh_grey"
            android:layout_marginBottom="1dp"
            tools:ignore="NestedWeights"
            android:gravity="center"
            >


            <TextView
                android:id="@+id/basic_result_item_standing"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_marker_shape"
                android:backgroundTint="@color/purple_700"
                android:backgroundTintMode="add"
                android:padding="3dp"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="12"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/basic_result_item_numcompetitors"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/custom_marker_shape"
                android:padding="3dp"
                android:gravity="center"
                android:text="/ 15"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/way_desc_bottom_right"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:background="@drawable/round_corners"
            android:backgroundTint="@color/white"
            android:layout_weight="0.5"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/basic_result_item_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00.25"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />





                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/way_desc_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.2" />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/way_desc_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_percent="0.5" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>